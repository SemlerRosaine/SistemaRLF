    private void btnAlterarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAlterarActionPerformed
        // TODO add your handling code here:
        Cliente c;

        if (gridConsulta.getSelectedRowCount() == 0) {
            JOptionPane.showInputDialog("Selecione um pedido para efetivar  a operação");
        } else {
            c = clientes.get(gridConsulta.getSelectedRow());
            Principal.TELA_PRINCIPAL.abrirJanelaCliente(telaCarregada, c);
        }


    }//GEN-LAST:event_btnAlterarActionPerformed

    private void btnExcluirActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnExcluirActionPerformed
        // TODO add your handling code here:
        Cliente p = new Cliente();
        p.setCodigo(Integer.valueOf(tmConsultaCliente.getValueAt(gridConsulta.getSelectedRow(), 0).toString()));
        p = new OADCliente().carrega(p);
        if (gridConsulta.getSelectedRowCount() == 0) {
            JOptionPane.showInputDialog("Selecione um pedido para efetivar  a operação");
        } else {
            p = clientes.get(gridConsulta.getSelectedRow());
            if (JOptionPane.showConfirmDialog(this, "Confirma a exclusão do cliente?", "Confirmação", JOptionPane.YES_NO_OPTION) == JOptionPane.YES_OPTION) {
                new OADCliente().remove(p);
            }
        }
        if (!new OADCliente().remove(p)) {
            JOptionPane.showMessageDialog(this, "Não foi possível Excluir! Verifique se existem pedidos ativos para esse Cliente.", "", JOptionPane.ERROR_MESSAGE);
        } else {
            consultarCliente(null);
        }

    }//GEN-LAST:event_btnExcluirActionPerformed

    private void btnPesqClienteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnPesqClienteActionPerformed
        Cliente pcons = new Cliente();
        if (!txtCodCliente.getText().isEmpty()) {
            pcons.setCodigo(Integer.valueOf(txtCodCliente.getText()));
        } else if ((!txtNomeCliente.getText().isEmpty())) {
            pcons.setNomeRazaoSocial(txtNomeCliente.getText());
        } else {
            pcons = null;
        }
        consultarCliente(pcons);
    }//GEN-LAST:event_btnPesqClienteActionPerformed

