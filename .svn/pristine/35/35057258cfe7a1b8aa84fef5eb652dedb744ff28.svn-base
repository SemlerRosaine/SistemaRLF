    }

    public void consultarCliente(Cliente p) {
        tmConsultaCliente.setRowCount(0);

        if ((p == null) || ((p.getCodigo() == null || p.getCodigo().equals(0)) && p.getNomeRazaoSocial().trim().isEmpty())) {
            List<Cliente> lp = new OADCliente().carregaTodos();
            for (int i = 0; i < lp.size(); i++) {
                tmConsultaCliente.addRow(transformaClienteEmVetor(lp.get(i)));
            }
        } else {
            if (p.getCodigo() == null) {
                if (p.getNomeRazaoSocial().trim().isEmpty()) {
                    JOptionPane.showMessageDialog(this, "Necessário Informar Código ou Nome/Razão Social!", "", JOptionPane.INFORMATION_MESSAGE);
                } else {
                    List<Cliente> lp = new OADCliente().ListaPeloNome(p.getNomeRazaoSocial());
                    for (int i = 0; i < lp.size(); i++) {
                        tmConsultaCliente.addRow(transformaClienteEmVetor(lp.get(i)));
                    }
                }
            } else {
                p = new OADCliente().carrega(p);
                tmConsultaCliente.addRow(transformaClienteEmVetor(p));
            }

        }


    }

    private Vector transformaClienteEmVetor(Cliente p) {
        Vector vector = new Vector();
        vector.add(p.getCodigo());
        vector.add(p.getNomeRazaoSocial());
        vector.add(p.getCpfCnpj());
        vector.add(p.getNomeContato());
        vector.add(p.getTelefone());
        return (vector);
    }

    private void selecionarItemGrid() {
        Cliente c = new Cliente();
        c.setCodigo(Integer.valueOf(tmConsultaCliente.getValueAt(gridConsulta.getSelectedRow(), 0).toString()));
        c = new OADCliente().carrega(c);
        telaChamadora.setClienteSelecionado(c);
        telaCarregada.dispose();

    }
