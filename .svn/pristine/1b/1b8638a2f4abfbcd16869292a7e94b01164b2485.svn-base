    private void carregarCliente(Cliente c) {
        txtNomeCliente.setText(c.getNomeRazaoSocial());
        txtEndereçoCliente.setText(c.getEndereco());
        txtCpfCnpjCliente.setText(c.getCpfCnpj().replaceAll("_", "").replaceAll("-", "").replaceAll("/", ""));
        txtCodCliente.setText(c.getCodigo().toString());
        txtNomeContato.setText(c.getNomeContato());
        txtTelefoneCliente.setText(c.getTelefone().replaceAll("_", ""));
        txtCelularCliente.setText(c.getTelefoneCelular().replaceAll("_", ""));
        txtTelefoneAlternativoCliente.setText(c.getTelefoneAlternativo().replaceAll("_", ""));
        txtEmailCliente.setText(c.getEmail());

    }

