    private void btnExcluirActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnExcluirActionPerformed
        // TODO add your handling code here:
        Produto p = new Produto();
        p.setCodigo(Integer.valueOf(tmConsultaProduto.getValueAt(gridConsulta.getSelectedRow(), 0).toString()));
        p = new OADProduto().carrega(p);
        if (gridConsulta.getSelectedRowCount() == 0) {
            JOptionPane.showInputDialog("Selecione um pedido para efetivar  a operação");
        } else {
            p = produtos.get(gridConsulta.getSelectedRow());
            if (JOptionPane.showConfirmDialog(this, "Confirma a exclusão do cliente?", "Confirmação", JOptionPane.YES_NO_OPTION) == JOptionPane.YES_OPTION) {
                new OADProduto().remove(p);
            }
        }

        consultarProduto(null);

    }//GEN-LAST:event_btnExcluirActionPerformed

    private void btnPesqProdActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnPesqProdActionPerformed
        Produto pcons = new Produto();
        if (!txtCodProdPedido.getText().trim().isEmpty()) {
            pcons.setCodigoReferencia(Integer.valueOf(txtCodProdPedido.getText()));
        } else if ((!txtDescProdPedido.getText().trim().isEmpty())) {
            pcons.setDescricao(txtDescProdPedido.getText());
        } else {
            pcons = null;
        }
        consultarProduto(pcons);
    }//GEN-LAST:event_btnPesqProdActionPerformed

