    public SistemaRLF() {
        initComponents();
        this.preferedDimension = new Dimension(820, 700);
        this.setExtendedState(Frame.MAXIMIZED_BOTH);
        Caracteristica Cor = new Caracteristica();
        Caracteristica Tamanho = new Caracteristica();
        try {
            List<Produto> lista = new OADProduto().VerificaReferenciasNulas();
            for (int i = 0; i < lista.size(); i++) {
                Produto p = (Produto) lista.get(i);
                p.setCodigoReferencia(p.getCodigo());
                new OADProduto().salvar(p);
            }
            Tamanho.setCodigo(1);
            Cor.setCodigo(2);
            if (new OADCaracteristica().carregaTodos().isEmpty()) {
                Tamanho.setNome("Tamanho");
                new OADCaracteristica().salvar(Tamanho);
                Cor.setNome("Cor");
                new OADCaracteristica().salvar(Cor);
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Erro ao acessar Banco de Dados - Verificar Status do Servidor!", "", JOptionPane.ERROR_MESSAGE);
            System.exit(0);
        }
    }

