        FormCadCliente j1 = new FormCadCliente(jf, jfChamadora, cliente, closeOnSave);
        jf.getContentPane().setLayout(new BorderLayout());
        jf.getContentPane().add(j1);
        jf.setSize(this.preferedDimension);
        jf.setVisible(true);
        SistemaRLF.TELA_DESKTOP.add(jf);
        this.destacaTela(jf);
        return jf;
    }

